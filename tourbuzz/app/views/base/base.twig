        	  ga('create', 'UA-74182539-1', 'auto');
        	  ga('send', 'pageview');

        	</script>
    	{% endif %}
	</head>
	<body>
	    {% include 'partials/grid.twig' %}

		{% block slider %}{% endblock %}

		{% block header %}
		    <header class="main-header">
		        <div class="app-wrapper">
    		        <a href="/" class="home">{#<i class="fa fa-bus"></i>#}<img src="/img/buzzlogo-w.png" style="width:60px"></a>
    		        <h2>
    		            <a href="/">Tour Buzz</a>
    		            {#<span>
    		                <a href="{{ vorige }}"><i class="fa fa-chevron-left"></i></a>
    		                <p id="headerdate" class="headerdate">{{ dag }} {{ d }} {{ maand(m) }} {{ y }}</p>
    		                <a href="{{ volgende }}"><i class="fa fa-chevron-right"></i></a>
                        </span>#}
                    </h2>
    		        <nav class="taal">
    		            <a href="?lang=nl" {% if lang =='nl' %}class="active"{% endif %}>NL</a> |
    		            <a href="?lang=en" {% if lang =='en' %}class="active"{% endif %}>EN</a>
    		            {#<a href="?lang=fr" {% if lang =='fr' %}class="active"{% endif %}>fr</a>#}
    		        </nav>
		        </div>
		    </header>
		{% endblock %}

		{% block flashmessages %}
		    {% if flash is not empty %}
    		    <section class="flashmessages">
        		    {% for type, message in flash %}
        		        <p class="{{ type }}">{{ message }}</p>
        		    {% endfor %}
    		    </section>
		    {% endif %}
		{% endblock %}

		{% block main %}{% endblock %}

		{% block footer %}
		    <footer>
		        <p>{{ __('Kijk op') }} <a href="//www.amsterdam.nl/touringcars">www.amsterdam.nl/touringcars</a></p>
		        <p style="font-weight: normal">Feedback of vragen kunt u sturen naar <br>Mark Sloothaak: <a href="mailto:touringcar@amsterdam.nl">touringcar@amsterdam.nl</a></p>
		        <p class="debug">API : {{ api }} </p>
		    </footer>
		{% endblock %}

        <script src="/js/pikaday/pikaday.js"></script>
        <script>

            var headerdate = new Pikaday({
                field: document.getElementById('headerdate'),
                format: '/YYYY/MM/DD',
                theme: 'buzz-theme',
                onSelect: function(date) {
                    //console.log(headerdate.toString());
                    window.location = headerdate.toString();
                }
            });

            var startdate = new Pikaday({
                field: document.getElementById('startdate'),
                format: 'YYYY-MM-DD',
                theme: 'buzz-theme'
            });
            var enddate = new Pikaday({
                field: document.getElementById('enddate'),
                format: 'YYYY-MM-DD',
                theme: 'buzz-theme'
            });
        </script>
	</body>
</html>
