    <body>
        {% include 'partials/grid.twig' %}


        {% block header %}
            <header class="main-header">
                <div class="app-wrapper">
                    <a href="/" class="home">{#<i class="fa fa-bus"></i>#}<img src="/img/buzzlogo-w.png" class="buzz-logo"></a>
                    <h2>
                        <a href="/">Tour&nbsp;Buzz</a>
                    </h2>
                    {#
                    <nav class="taalswitch group">
                        <div class="dropdown group">
                            <a href="?lang=nl" {% if lang =='nl' %}class="active"{% endif %}><img src="/img/nederlands.png"> NL</a>
                            <a href="?lang=en" {% if lang =='en' %}class="active"{% endif %}><img src="/img/english.png"> EN</a>
                        </div>
                    </nav>
                    #}
                    <nav class="taal">
                        <a href="?lang=nl" {% if lang =='nl' %}class="active"{% endif %}>NL</a> |
                        <a href="?lang=en" {% if lang =='en' %}class="active"{% endif %}>EN</a>
                        {#<a href="?lang=de" {% if lang =='de' %}class="active"{% endif %}>DE</a>#}
                    </nav>
                </div>
            </header>

        {% endblock %}

        {% block flashmessages %}
            {% if flash is not empty %}
                <section class="flashmessages">
                    {% for type, message in flash %}
                        <p class="{{ type }}">{{ message }}</p>
                    {% endfor %}
                </section>
            {% endif %}
        {% endblock %}

        {% block topselectie %}
            <div class="wrapper app-wrapper">
                <nav class="topselectie">
                    <a href="/{{ Y }}/{{ m }}/{{ d }}" class="grotekaart {% if activetab == 'berichten' %}active{% endif %}">{{ __('berichten') }}</a>
                    <a href="/haltes" class="grotekaart {% if activetab == 'haltes' %}active{% endif %}">{{ __('haltes') }}</a>
                    <a href="/parkeren" class="grotekaart {% if activetab == 'parkeren' %}active{% endif %}">{{ __('parkeren') }}</a>
                </nav>
            </div>
        {% endblock %}

        <div class="wrapper app-wrapper">
            {% block slider %}{% endblock %}
        </div>

        {% block main %}{% endblock %}

        {% block footer %}
            <footer>
                <p>{{ __('Meer info') }}: <a href="//www.amsterdam.nl/touringcars" target="_blank">www.amsterdam.nl/touringcars</a></p>
                <p style="font-weight: normal">{{ __('Feedback of vragen kunt u sturen naar') }}<br>Mark Sloothaak: <a href="mailto:touringcar@amsterdam.nl">touringcar@amsterdam.nl</a></p>
                {% if timestamp is not empty %}
                    <p>{{ __('Laatste wijziging') }}: {{ timestamp }}</p>
                {% endif %}
                {#<p class="debug">API : {{ api }} </p>#}
            </footer>
        {% endblock %}

        <script src="/js/pikaday/pikaday.js"></script>
        <script>

            var headerdate = new Pikaday({
                field: document.getElementById('headerdate'),
                format: '/YYYY/MM/DD',
                theme: 'buzz-theme',
                onSelect: function(date) {
                    //console.log(headerdate.toString());
                    window.location = headerdate.toString();
                }
            });

            var startdate = new Pikaday({
                field: document.getElementById('startdate'),
                format: 'YYYY-MM-DD',
                theme: 'buzz-theme'
            });
            var enddate = new Pikaday({
                field: document.getElementById('enddate'),
                format: 'YYYY-MM-DD',
                theme: 'buzz-theme'
            });
        </script>
    </body>
</html>
