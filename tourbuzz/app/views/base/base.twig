<html lang="nl">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="initial-scale=1">
        <meta name="mobile-web-app-capable" content="yes">
        <!--<link href="/favicon.ico" rel="icon" type="image/x-icon">-->
		<title>Tour Buzz</title>
		<meta name="description" content="TourBuzz for coach drivers">
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
		<link rel="stylesheet" href="/css/scss/main.scss">
        <link rel="stylesheet" href="/js/owl-carousel/owl.carousel.css">
        <link rel="stylesheet" href="/js/owl-carousel/owl.theme.css">
		<link rel="stylesheet" href="/js/pikaday/css/pikaday.css">
		<link rel="stylesheet" href="/css/pikaday/buzz-theme.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
        <script src="/js/owl-carousel/owl.carousel.min.js"></script>
		<script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.11.2/moment.min.js"></script>
        <script src="/js/pico-ui.js"></script>
        <script>
            $(document).ready(function() {

                $("#owl-example").owlCarousel({
                    singleItem: true,
                    navigation: false,
                    autoHeight: false,
                    afterInit : function(elem){
                        var that = this
                        that.owlControls.prependTo(elem)
                    }
                });



                //get carousel instance data and store it in variable owl
                var owl = $("#owl-example").data('owlCarousel');

              // Custom Navigation Events
              $(".next").click(function(){
                $("#owl-example").trigger('owl.next');
              })
              $(".prev").click(function(){
               $("#owl-example").trigger('owl.prev');
              })

                /*$('.slide-link').click(function(e){
                    e.preventDefault();
                    var slide = $(this).attr('href');
                    var index = slide.match(/[0-9]+/g);
                    owl.jumpTo(index - 1);
                });*/

                $('[data-item]').on('click', function(e)  {
                    e.preventDefault();
                    $(".slider").toggleClass("hide");
                    $(".buzz").toggleClass("hide");
                    $(".main-header").toggleClass("hide");
                    $("footer").toggleClass("hide");
                    var slide = $(this).attr('href');
                    var index = slide.match(/[0-9]+/g);
                    owl.jumpTo(index - 1);
                });

                $('[data-close]').on('click', function(e)  {
                    e.preventDefault();
                    $(".slider").toggleClass("hide");
                    $(".buzz").toggleClass("hide");
                    $(".main-header").toggleClass("hide");
                    $("footer").toggleClass("hide");
                });

            });
        </script>
        {% if analytics %}
