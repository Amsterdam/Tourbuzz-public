<!doctype html>
<html lang="nl">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="initial-scale=1">
        <meta name="mobile-web-app-capable" content="yes">
        <!--<link href="/favicon.ico" rel="icon" type="image/x-icon">-->	
		<title>TourBuzz</title>
		<meta name="description" content="TourBuzz for coach drivers">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">		
		<link href="/css/scss/main.scss" rel="stylesheet">
		<link href="/js/pikaday/css/pikaday.css" rel="stylesheet">		
        <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
		<script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.11.2/moment.min.js"></script>        
        <script src="/js/pico-ui.js"></script>     			
	</head>
	<body>
	    {% include 'partials/grid.twig' %}
		
		{% block header %}
		    <header class="main-header">
		        <div class="app-wrapper group">
    		        <a href="/" class="home"><i class="fa fa-bus"></i></a>
    		        <h2>Tour Buzz<span><a href="{{ vorige }}"><i class="fa fa-chevron-left"></i></a>{{ dag }} {{ d }} {{ maand(m) }} {{ y }} <a href="{{ volgende }}"><i class="fa fa-chevron-right"></i></a></span></h2>
    		        <nav class="taal">
    		            <a href="?lang=nl" {% if lang =='nl' %}class="active"{% endif %}>nl</a>
    		            <a href="?lang=en" {% if lang =='en' %}class="active"{% endif %}>en</a>
    		            <a href="?lang=fr" {% if lang =='fr' %}class="active"{% endif %}>fr</a>
    		        </nav>
		        </div>
		    </header>
		{% endblock %}
		
		{% block main %}{% endblock %}
		
		{% block footer %}
		    <footer class="wrapper app-wrapper">
		        <p>{{ __('Kijk op') }} <a href="//www.amsterdam.nl/touringcars">www.amsterdam.nl/touringcars</a>
		        <span class="debug">API : {{ api }} </span>
		        </p>
		    </footer>
		{% endblock %}
		
        <script src="/js/pikaday/pikaday.js"></script>
        <script>
            var startdate = new Pikaday({ 
                field: document.getElementById('startdate'),
                format: 'YYYY-MM-DD'
            });
            var enddate = new Pikaday({ 
                field: document.getElementById('enddate'),
                format: 'YYYY-MM-DD'
            });
        </script>   
	</body>
</html>