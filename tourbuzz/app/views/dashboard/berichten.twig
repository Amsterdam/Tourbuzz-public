{% extends 'base/base.twig' %}

{% block main %}
<main class="wrapper app-wrapper"> 
 
    <form class="form-styles" method="post" action="/dashboard/berichten">
        <input type="hidden" name="id" value="{{ bericht.id }}">
        {{ feedback }}
        <h3>Nieuw bericht</h3>
        <div class="grid-row">
            <select name="category">
                <option value="nieuws">Nieuws</option>
                <option value="evenement">Evenement</option>
                <option value="drukte">Drukte</option>
                <option value="calamiteit">Calamiteit / ongeluk</option>
                <option value="wegwerkzaamheden">Wegwerkzaamheden</option>
                <option value="overig">Overig</option>                
            </select>
        </div>
        
        <input type="text" name="title" placeholder="Bericht" value="{{ bericht.title }}">
        <textarea name="body" placeholder="Toelichting (optioneel)">{{ bericht.body }}</textarea>
        
        <input type="text" name="title_en" placeholder="Bericht (engels)" value="{{ bericht_en.title  }}">
        <textarea name="body_en" placeholder="Toelichting (engels)">{{ bericht_en.body  }}</textarea>
        
        <input type="text" name="title_fr" placeholder="Bericht (frans)" value="{{ bericht_fr.title  }}">
        <textarea name="body_fr" placeholder="Toelichting (frans)" value="{{ bericht_fr.body  }}"></textarea>        
        
        <span class="maxchars">Max 200 karakters</span>
        
        <div class="grid-row group">
            <h3 style="margin-top: 20px">Publicatiedatum</h3>
            <div class="datepicker">
                <input type="text" name="startdate" id="startdate" placeholder="Start" value="{{ bericht.startdate }}">
            </div>
            <div class="datepicker">
                <input type="text" name="enddate" id="enddate" placeholder="Einde" value="{{ bericht.enddate }}">
            </div>
        </div>
        <button type="submit">Opslaan</button>        
    </form>
    
    <section class="buzz">
        <form method="post" action="berichten/verwijderen">
        <button type="submit" class="verwijderen">Verwijderen</button>
        {#<a href="#" class="verwijder"> x verwijderen</a>#}
        <h2>Berichten</h2>
        <ol>
            {% for record in berichten %}
            <li>
                <input type="checkbox" name="ids[]" value="{{ record.id }}">
                <span class="nr">{{ loop.index }}</span>
                <a href="/dashboard/berichten/{{ record.id }}">{{ record.title }}</a> <span class="meta">{{ record.category }}</span>
            </li>
            {% endfor %}
        </ol>
        </form>
    </section>
    
    
</main>
{% endblock %} 