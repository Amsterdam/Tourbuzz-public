{% extends 'base/base.twig' %}

{% block main %}
<main class="wrapper app-wrapper"> 
 
    <form class="form-styles" method="post">
        {{ feedback }}
        <h3>Nieuw bericht</h3>
        <div class="grid-row">
            <select name="category">
                <option value="nieuws">Nieuws</option>
                <option value="evenement">Evenement</option>
                <option value="drukte">Drukte</option>
                <option value="calamiteit">Calamiteit / ongeluk</option>
                <option value="wegwerkzaamheden">Wegwerkzaamheden</option>
                <option value="overig">Overig</option>                
            </select>
        </div>
        <input type="text" name="title" placeholder="Bericht">
        <textarea name="body" placeholder="Toelichting (optioneel)"></textarea>
        <span class="maxchars">Max 200 karakters</span>
        <div class="grid-row">
        start <input type="datetime" placeholder="jjjj-mm-dd" name="startdate">&nbsp;&nbsp;
        eind <input type="datetime" placeholder="jjjj-mm-dd" name="enddate">
        </div>
        {#<div class="grid-row">
            <h4>Bijlage</h4>
            <input type="file">
        </div>#}
        <button type="submit">Toevoegen</button>        
    </form>
    
    <section class="buzz">
        <form method="post" action="berichten/verwijderen">
        <button type="submit" class="verwijderen">Verwijderen</button>
        {#<a href="#" class="verwijder"> x verwijderen</a>#}
        <h2>Berichten</h2>
        <ol>
            {% for record in berichten %}
            <li><input type="checkbox" name="ids[]" value="{{ record.id }}"><span class="nr">{{ loop.index }}</span> {{ record.title }}</li>
            {% endfor %}
            
