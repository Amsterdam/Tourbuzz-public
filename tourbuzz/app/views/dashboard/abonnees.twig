{% extends 'base/base.dashboard.twig' %}

{% block main %}
<main class="wrapper">

    <article>
    <div class="col-1-1">
    <a href="/mail/csv" class="button" style="display: inline-block; margin-bottom: 30px">Download als CSV</a>
    </div>

    <div class="col-2-3" style="width: 66.66%; float: left; padding: 0 10px">

    <div style="margin-top: 15px">
        <h3>Nieuwsbrief</h3>
        <p>{{ abonnees|length }} abonnees.</p>
    </div>

    </div>

    </div>

        <div class="col-1-3">
        <aside class="" style="background: #F9ECDE; padding: 20px 20px 10px">
    <h3 style="color: rgba(0,0,0,0.6)">SMS notificaties</h3>
    <p style="color: rgba(0,0,0,0.6)">{{ nummers }} nummers aangemeld.</p>
        </aside>
    </div>
    <div class="col-1-1">
    <table>
            <tr>
                <th>E-mail</th>
                <th>Naam</th>
                <th>Organisatie</th>
                <th>Bevestigd</th>
            </tr>
            {% for record in abonnees if record.confirmed is not null %}
            <tr>
                <td>{{ record.mail }}</td>
                <td>{{ record.name }}</td>
                <td>{{ record.organisation }}</td>
                <td>{{ record.confirmed.date|date('d-m-Y') }} om {{ record.confirmed.date|date('H:i') }}</td>
            </tr>
            {% endfor %}
        </table>
    </div>
    </article>
</main>
{% endblock %}

{% block footer %}{% endblock %}
