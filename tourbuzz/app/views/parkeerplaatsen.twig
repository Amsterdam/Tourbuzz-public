{% extends 'base/base.twig' %}

{% block slider %}
    {% include 'partials/slider.twig' %}
{% endblock %}

{% block main %}
<main class="wrapper app-wrapper">
    <section class="buzz">
        {% include 'partials/dagselectie.twig' %}

        <nav class="topselectie">
            <a href="/{{ Y }}/{{ m }}/{{ d }}" class="grotekaart">berichten ({{ berichten|length }})</a>
            <a href="/haltes" class="grotekaart">haltes</a>
            <a href="/parkeren" class="grotekaart active">parkeren</a>
        </nav>

        <h2>Alle parkeerplaatsen</h2>
        <p style="margin-bottom: 15px">Op onderstaande locaties kunt u uw bus parkeren. Onder de kaart vindt u de tarieven.</p>

        <section class="kaartmap wrapper">
            <img src="{% include 'partials/googlemap.empty.twig' %}" style="width: 100%">
            {% for parkeerplaats in parkeerplaatsen %}
            <a href="/parkeerplaatsen/{{ parkeerplaats.nummer }}" style="top: {{ parkeerplaats.rel_loc.dY }}%; left: {{ parkeerplaats.rel_loc.dX }}%">
                <img src="/img/parkeerplaatsen/{{ parkeerplaats.nummer|lower }}.png" class="maplink-p">
            </a>
            {% endfor %}
        </section>

    </section>
</main>
{% endblock %}