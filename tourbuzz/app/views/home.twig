{% extends 'base/base.twig' %}

{% block slider %}
     {% include 'partials/slider.twig' %}
{% endblock %}

{% block main %}

<main class="wrapper app-wrapper">

    <section class="buzz">

    {% include 'partials/dagselectie.twig' %}

        <nav class="topselectie">
            <a href="#" class="grotekaart active">berichten ({{ berichten|length }})</a>
            <a href="/haltes" class="grotekaart">haltes</a>
            <a href="/parkeren" class="grotekaart">parkeren</a>
        </nav>

        <ol class="berichten">
            {% for record in berichten %}

                {% set title %}
                    {% if lang == 'nl' %}{{ record.title }}{% endif %}
                    {% if lang == 'en' %}{{ record.title_en }}{% endif %}
                    {% if lang == 'fr' %}{{ record.title_fr }}{% endif %}
                {% endset %}

                {% set body %}
                    {% if lang == 'nl' %}{{ record.body|raw }}{% endif %}
                    {% if lang == 'en' %}{{ record.body_en|raw }}{% endif %}
                    {% if lang == 'fr' %}{{ record.body_fr|raw }}{% endif %}
                {% endset %}

                <li><a href="#slide{{ loop.index }}" data-item="{{ loop.index }}" class="slide-link"><span class="nr">{{ loop.index }}</span>{{ title }}</a></li>
            {% endfor %}
        </ol>


        <section class="kaartmap wrapper">
            <img src="{% include 'partials/googlemap.empty.twig' %}" style="width: 100%">
            {% for record in berichten %}
            <a href="#slide{{ loop.index }}" data-item="{{ loop.index }}" style="top: {{ record.rel_loc.dY }}%; left: {{ record.rel_loc.dX }}%">
                <img src="/img/markers/{{ loop.index }}.png" class="maplink-m">
            </a>
            {% endfor %}
        </section>

        {#<img src="{% include 'partials/googlemap.twig' %}">#}

    </section>


    {% if cruisekalender is not empty %}
    <section class="cruiseschepen">
        <h3><i class="fa fa-ship"></i> Passengers Terminal Amsterdam</h3>
        <ul>
        {% for record in cruisekalender %}
            <li>
            {{ record.name }} <span class="meta">({{ record.passagiers}} passagiers) - {{ record.aanvang }}</span>
            </li>
        {% endfor %}
        </ul>
    </section>
    {% endif %}

</main>

{% endblock %}
