{% extends 'base/base.twig' %}

{% block slider %}
    {% include 'partials/slider.twig' %}
{% endblock %}

{% block main %}
<main class="wrapper app-wrapper">
    <section class="buzz">
        {% include 'partials/dagselectie.twig' %}

        <nav class="topselectie">
            <a href="/{{ Y }}/{{ m }}/{{ d }}" class="grotekaart">berichten ({{ berichten|length }})</a>
            <a href="/haltes" class="grotekaart active">haltes</a>
            <a href="/parkeren" class="grotekaart">parkeren</a>
        </nav>

        <h2>Alle halteerplekken</h2>
        <p style="margin-bottom: 15px">Op onderstaande locaties kunt u uw passagiers in- en uit laten stappen. Rij bij een bezette halte, indien mogelijk door naar de eerstvolgende op de route.<br><b>Let op:</b> maximaal 10 min stilstaan.</p>

        <section class="kaartmap wrapper">
            <img src="{% include 'partials/googlemap.empty.twig' %}" style="width: 100%">
            {% for halte in haltes %}
            <a href="/haltes/{{ halte.haltenummer }}" style="top: {{ halte.rel_loc.dY }}%; left: {{ halte.rel_loc.dX }}%">
                <img src="/img/haltes/{{ halte.haltenummer|lower }}.png" class="maplink-h" style="width: 50%">
            </a>
            {% endfor %}
        </section>

        <ol>
        {% for halte in haltes %}
        <li>
            <a href="/haltes/{{ halte.haltenummer }}" class="halte-link">{{ halte.haltenummer }}</a>
            {{ halte.straat }} {#<span class="meta">{{ halte.locatie }}</span>
            {{ halte.capaciteit }} plaatsen#}
        </li>
        {% endfor %}
        </ol>
    </section>
</main>
{% endblock %}