{% extends 'base/base.twig' %}

{% block slider %}
     {% include 'partials/slider.twig' %}
{% endblock %}

{% block main %}

<main class="wrapper app-wrapper">

    <section class="buzz">
    <h2 class="halte-link">{{ record.haltenummer }}</h2>&nbsp;&nbsp;<span>{{ record.straat }}</span><br>
    <span class="capaciteit">{{ halte.capaciteit }} {{ __('plaatsen') }}</span><br>
    <p class="meta">{{ record.locatie }}</p>
    <section class="kaartmap wrapper">
        <img src="{% include 'partials/googlemap.empty.twig' %}" style="width: 100%">
        {% for halte in haltes %}
        <a href="/haltes/{{ halte.haltenummer }}" style="top: {{ halte.rel_loc.dY }}%; left: {{ halte.rel_loc.dX }}%">
            <img src="/img/haltes/{{ halte.haltenummer|lower }}.png" class="maplink-h" style="width: 50%">
        </a>
        {% endfor %}
    </section>

    </section>
</main>

{% endblock %}
