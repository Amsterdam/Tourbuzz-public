 <section class="slider hide" pico-id="slider">
    <a href="#" class="close" data-close><i class="fa fa-close"></i></a>

    {#<div class="customNavigation">
        <a class="volgende">Volgende</a>
        <a class="vorige">Vorige</a>
    </div>#}

    <div id="owl-example" class="owl-carousel">
        {% for record in berichten %}

        {% set title %}
            {% if lang == 'nl' %}{{ record.title }}{% endif %}
            {% if lang == 'en' %}{{ record.title_en }}{% endif %}
        {% endset %}

        {% set body %}
            {% if lang == 'nl' %}{{ insertlinks(record.body)|raw }}{% endif %}
            {% if lang == 'en' %}{{ insertlinks(record.body_en)|raw }}{% endif %}
        {% endset %}

        {% set advice %}
            {% if lang == 'nl' %}{{ insertlinks(record.advice)|raw }}{% endif %}
            {% if lang == 'en' %}{{ insertlinks(record.advice_en)|raw }}{% endif %}
        {% endset %}

        <article>
            <h3><span class="nr">{{ loop.index }}</span> {{ title }}</h3>
            <p>{{ body|raw }}</p>
            {% if advice|trim is not empty %}
                <section class="advies">
                    <h4>{{ __('Advies') }}</h4>
                    <p>{{ advice|raw }}</p>
                </section>
            {% endif %}

            {% if record.location is not empty %}
                <a href="{{ record.link }}" target="_blank">
                    <img src="{% include "partials/googlemap.single.twig" %}">
                </a>
            {% else %}
                <a href="{{ record.link }}" class="extern" target="_blank">{{ record.link }}</a>
            {% endif %}

            {% if record.image_url is not empty %}
                <img src="{{ record.image_url }}/?width=800&height=400&method=fit">
            {% endif %}
        </article>
        {% endfor %}
    </div>
</section>
